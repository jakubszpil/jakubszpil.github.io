    "postcss": "8.5.6",
    "tailwindcss": "4.1.17",
    "tailwindcss-animate": "1.0.7",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "uglify-js": "3.19.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-babel": "1.3.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.9"
  },
