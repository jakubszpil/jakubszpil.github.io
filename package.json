    "@radix-ui/react-slot": "1.2.4",
    "@react-router/dev": "7.9.6",
    "@react-router/node": "7.9.6",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "isbot": "5.1.32",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router": "7.9.6",
    "tailwind-merge": "3.4.0",
    "tiny-invariant": "1.3.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.17",
    "@tailwindcss/typography": "0.5.19",
