{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "!.react-router/**"]
    },
    "start": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["^build", "^test"]
    },
    "test:ci": {
      "dependsOn": ["^build", "^test:ci"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
